  width: 10px;
}

.trail-preamble {
  color: #ccc;
  margin-bottom: 8px;
}

.trail-group {
  line-height: 1.2;
  margin-bottom: 16px;
}

.trail-group-title {
  color: #ccc;
  font-size: 12px;
  margin-bottom: 2px;
}
.trail-group-title-unknown {
  color: #666;
}

.trail-item {
  border: 1px solid #444;
  border-radius: 2px;
  display: inline-block;
  height: 40px;
  width: 40px;
}
.trail-item:not(:last-child) {
  margin-right: 4px;
}
