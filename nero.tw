      return outer;
    }

    outer.addClass("var-info-misc");
    return outer;
  };

  $(document).on(":passagestart", () => {
    const here = State.passage;
    let anyMatched = false;
    for (const [re, ...vars] of bigMoodVars) {
      if (!re.test(here)) continue;
      anyMatched = true;
      for (const vname of vars) {
        if (Array.isArray(vname) && vname[1] !== 'ignore') {
          const x = `\`${vname[1]} in ${re}\``;
          assertBigMood(vname[0], vname[1], x);
        }
      }
    }
    if (!anyMatched) {
      EM.fail(`Passage should match some bigMoodVars rule`);
    }
    VT.start();
  });

  $(document).on(":passageend", () => {
    $(".var-info").remove();
    VT.stop();

    const touched = new Set();
    [...VT.ctx.wasRead].forEach(v => touched.add(v));
    [...VT.ctx.wasSet].forEach(v => touched.add(v));
    [...VT.ctx.wasDeleted].forEach(v => touched.add(v));

    const passageText = Story.get(State.passage).text;
    if (!/<<include/.test(passageText)) {
      // ideally the "always" check would be scoped to the passage thet declares it
      [...VT.ctx.wasRead].filter(vn => vn in bigMoodAlways).forEach(vn => {
        EM.fail(`Passage should not read ${vn} (always ${bigMoodAlways[vn]})`);
      });
    }

    const here = State.passage;
    const bigMood = new Set();
    for (const [re, ...vars] of bigMoodVars) {
      if (!re.test(here)) continue;
      for (const vname of vars) {
        if (!Array.isArray(vname)) {
          bigMood.add(vname);
          touched.delete(vname);
        }
      }
    }

    for (const vn of bigMoodDeclared) {
      bigMood.add(vn);
      touched.delete(vn);
    }

    const outer = $("<div class=var-info>").prependTo("#story");
    outer.toggleClass("var-info-hidden", !varInfoShow);
    const lab = $("<label>").text("var-info").appendTo(outer);
    lab.click(() => {
      varInfoShow = !varInfoShow;
      State.metadata.set("varInfoShow", varInfoShow);
      outer.toggleClass("var-info-hidden", !varInfoShow);
    });
    $("<div class=var-info-expand>[compute variants]</div>")
      .click(() => CV.render())
      .appendTo(outer);

    if (bigMood.size) {
      const el = $("<span class=var-info-big-mood>").appendTo(outer);
      [...bigMood].sort().forEach(v => {
        const but = varButton(v).appendTo(el);
        if (bigMood_to_do.has(v)) {
          MT.has_to_do = true;
          but.addClass("var-info-to-do");
        } else if (!VT.ctx.wasRead.has(v) && !bigMoodIgnore.has(v) && bigMoodReq[v] == null && bigMoodAlways[v] == null) {
          MT.has_warning = true;
          but.addClass("var-info-warning");
        }
        if (!bigMoodDeclared.has(v)) {
          MT.has_undeclared = true;
          but.addClass("var-info-undeclared");
        }
      });
    }
    $("<span class=var-info-separator>").appendTo(outer);
    if (touched.size) {
      const el = $("<span class=var-info-touched>").appendTo(outer);
      [...touched].sort().forEach(v => varButton(v).appendTo(el));
    }
    $("<span class=var-info-separator>").appendTo(outer);
    $("<span class=var-info-passage>").text(here).appendTo(outer);
    if ($("#messages-to-do").length > 0) {
      outer.addClass("var-info-to-do");
      $("<span id=var-info-to-do>")
        .text("\uD83D\uDEA7")
        .on("click", () => {
          $("#messages-to-do")
            .toggleClass("messages-to-do-hidden");
        }).appendTo(outer);
    }
    if (outer.find(".var-info-to-do, .var-info-warning").length > 0) {
      outer.addClass("var-info-to-do");
    }
  });
}

