    if (VT.ctx.wasRead.has(vname)) outer.addClass("var-info-was-read");
    if (VT.ctx.wasSet.has(vname)) outer.addClass("var-info-was-written");
    if (VT.ctx.wasDeleted.has(vname)) outer.addClass("var-info-was-deleted");
    if (!VT.ctx.wasRead.has(vname) && !VT.ctx.wasSet.has(vname)) outer.addClass("var-info-was-ignored");
    if (bigMoodReq[vname] != null && bigMoodReq[vname] === v[vname]) outer.addClass("var-info-req");

    const label = $("<span class=var-info-button-label>").appendTo(outer);

    const jval = str(v[vname]);
    if (VT.ctx.wasSet.has(vname)) {
      const jval0 = str(v0[vname]);
      outer.attr("title", `${vname}=${jval0} ->\n${vname}=${jval}`);
    } else {
      outer.attr("title", `${vname}=${jval}`);
    }
    $("<span class=var-info-vname>").text(vname).appendTo(label);
    label.append("=");
    $("<span class=var-info-value>").text(jval).appendTo(label);

    // assume unset is boolean
    const vtype = ET.vars[vname] || (vname in v ? typeof v[vname] : "boolean");

    if (vtype === "boolean") {
      outer.addClass("var-info-boolean");
      outer.addClass("var-info-boolean-" + (v[vname] ? "true" : "false"));
      label.text(vname);
      if (VT.ctx.wasRead.has(vname)) {
        outer.addClass("var-info-can-change");
        outer.on("click", () => {
          let val = !v0[vname];
          VI.revisitHere(() => {
            State.variables[vname] = val;
            const imp = bigMoodImplies[vname];
            if (val && imp != null) {
              imp.forEach(([b, v2]) => State.variables[v2] = b);
            }
            const fimp = bigMoodFalseImplies[vname];
            if (!val && fimp != null) {
              fimp.forEach(([b, v2]) => State.variables[v2] = b);
            }
          });
        });
      }
      return outer;
    }

    const enumList = ET.enums[vtype];
    if (enumList != null) {
      outer.addClass("var-info-enum");
      outer.addClass("var-info-enum-" + vtype);
      const sym = enumList[v[vname] || 0];
      const sameType = Object.values(ET.vars).filter(t => t === vtype).length;
      label.text(sym != null && sameType < 2 ? sym : vname + "=" + jval);
      const n = enumList.length;
      if (VT.ctx.wasRead.has(vname)) {
        if (0 < v[vname]) {
          const left = $("<span>").addClass("var-info-enum-left var-info-can-change").appendTo(outer);
          left.on("click", () => {
            let val = v0[vname] - 1;
            VI.revisitHere(() => State.variables[vname] = val);
          });
        }
        if (v[vname] < n - 1) {
