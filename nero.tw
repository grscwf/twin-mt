window.MagesTower || (window.MagesTower = {});
const MT = window.MagesTower;

Config.saves.id = 'sleth-mages-tower-2';
Config.ui.stowBarInitially = true;

// enable debug if URL has ?debug
if (/[?&]debug\b/.test(location.search)) {
  Config.debug = true;
}

if (!Config.debug) {
  Config.history.controls = false;
}

if (Config.debug) {
  // set flag for StoryMenu (can't use Config.debug; it's always false for StoryMenu)
  setup.enableDebugMenu = true;
  // start with debugview off
  setTimeout(() => DebugView.disable());
  // add debugging class for css
  $('html').addClass('debugging');
}

// images workaround for local testing
if (location.protocol === 'file:' && /-[0-9a-f]{12}\.html$|[/]Twine[/]Stories[/]/.test(location.pathname)) {
  // base for html images (this happens too late for css images)
  $('head').prepend('<base href="https://magestower.slethstories.com/">');
  // add file-url class for css
  $('html').addClass('file-url');
}

l10nStrings.restartTitle = 'Reset';
l10nStrings.restartPrompt = 'Reset will re-lock all endings in the Archives, and delete any unsaved progress.<br><br>Are you sure you want to reset everything and start over?';

$(document.head).append("<link rel='icon' href='images/mt_icon_tr.png'>");

$(document).on(':passagestart', function (ev) {
    if (! ev.passage.tags.contains("noreturn")) {
        State.variables.return = ev.passage.title;
    }
});


/** forward decls */
const EM = window.ErrorMessage || (window.ErrorMessage = {});
const ET = window.EnumType || (window.EnumType = {});
const CV = window.ComputeVariants || (window.ComputeVariants = {});
const VI = window.VarInfo || (window.VarInfo = {});
const VT = window.VarTrace || (window.VarTrace = {});

/*** to-do */
$(document).on(":passagestart", () => {
  MT.has_to_do = false;
  MT.has_warning = false;
  MT.has_undeclared = false;
});

function add_to_do(text) {
  MT.has_to_do = true;
  let list = $("#messages-to-do > ul");
  if (list.length !== 1) {
    $("#messages-to-do").remove();
    const div = $("<div id=messages-to-do class=messages-item>");
    div.addClass("messages-to-do-hidden");
    EM.note("").append(div);
    $("<a class=messages-close>[close]</a>").on("click", () => {
      div.remove();
    }).appendTo(div);
    $("<div class=messages-to-do-label>")
      .text("TO"+"DO").appendTo(div);
    list = $("<ul>").appendTo(div);
  }
  $("<li>").text(text).appendTo(list);
}

Macro.add("TO"+"DO", {
  skipArgs: true,
  handler: function() {
    add_to_do(this.args.raw);
  }
});

/*** Big Mood */

const bigMood_to_do = new Set();
const bigMoodDeclared = new Set();
const bigMoodIgnore = new Set();
const bigMoodVary = new Set();
let bigMoodAlways = {};
let bigMoodImplies = {};
let bigMoodFalseImplies = {};
let bigMoodReq = {};

$(document).on(":passagestart", () => {
  bigMood_to_do.clear();
  bigMoodDeclared.clear();
  bigMoodIgnore.clear();
  bigMoodVary.clear();
  bigMoodAlways = {};
  bigMoodImplies = {};
  bigMoodFalseImplies = {};
  bigMoodReq = {};
});

const bigMoodRe =/^\s*[$]?(\w+)\s+(?:(ignore|TO[D]O|vary)|(always|assert|implies)\s+(.*))\s*$/

Macro.add("big-mood", {
  skipArgs: true,
  handler: function() {
    if (!Config.debug) return;

    const m = bigMoodRe.exec(this.args.raw);
    if (m == null) throw new Error(`big-mood: bad args ${this.args.raw}`);
    const vn = m[1];

    const inclusion = withinIncludeOrIgnore(this);
    if (!inclusion) bigMoodDeclared.add(vn);

    switch (m[2]) {
      case "ignore":
        if (!inclusion) bigMoodIgnore.add(vn);
        return;
      case "TO"+"DO":
        MT.has_to_do = true;
        bigMood_to_do.add(vn);
        return;
      case "vary":
        // no constraint on value, but shouldn't be ignored.
        if (!inclusion) bigMoodVary.add(vn);
        return;
    }

    if (m[2] != null || m[3] == null || m[4] == null) throw new Error("bug");

    const actual = VT.untracedGet(vn);
    const val = VT.ignore(() => Scripting.evalTwineScript(m[4]));
    let ok = false;
    switch (m[3]) {
      case 'always':
        bigMoodAlways[vn] = val;
        ok = actual === val || (actual == null && val === false);
        if (ok) bigMoodIgnore.add(vn);
        break;
      case 'assert':
        ok = val;
        break;
      case 'implies': {
        ok = !!actual === false || val;
        const m2 = /^\s*([!]?)[$](\w+)\s*$/.exec(m[4]);
        if (m2 == null) break;

        const bool = m2[1] !== "!";
        const v2 = m2[2];
        bigMoodImplies[vn] ??= [];
        bigMoodImplies[vn].push([bool, v2]);

        if (actual) {
          if (bigMoodReq[v2] != null && bigMoodReq[v2] !== bool) {
            EM.fail(`Should satisfy implication for ${v2}`, this);
          }
          bigMoodReq[v2] = bool;
        }

        // contrapositive
        if (bool) {
          bigMoodFalseImplies[v2] ??= [];
          bigMoodFalseImplies[v2].push([false, vn]);
        } else {
          bigMoodImplies[v2] ??= [];
          bigMoodImplies[v2].push([false, vn]);
        }
        if (!!VT.untracedGet(v2) === !bool) {
          if (bigMoodReq[vn] != null && bigMoodReq[vn] !== false) {
            EM.fail(`Should satisfy contrapositive for ${vn}`, this);
          }
          bigMoodReq[vn] = false;
        }
        break;
      }
      default:
        throw new Error("bug");
    }
    if (!ok) {
      EM.fail(`Expected big-mood ${vn} ${m[3]} ${m[4]}`, this);
    }
  }
})

function assertBigMood(vn, val, expr) {
  const actual = VT.untracedGet(vn);
  const ok = actual === val || (actual == null && val === false);
  if (ok) {
    bigMoodIgnore.add(vn);
    return;
  }
  EM.fail(`Expected big-mood ${vn} to be ${expr}`);
}

function withinIncludeOrIgnore(context) {
  for (; context != null; context = context.parent) {
    if (context.displayName === "include") return true;
    if (context.displayName === "var-trace-ignore") return true;
  }
  return false;
}

