<<script>>

Macro.add("n1-patience", {
  handler: function() {
    const V = State.variables;
    const T = State.temporary;
    const looks = this.args[0];
    const actions = this.args[1];
    const patientText = this.args[2];
    const impatientText = this.args[3] || patientText;
    const angryText = this.args[4] || impatientText;
    const here = State.passage;
    const ptitle = State.peek(-1).title;
    const ppassage = Story.get(ptitle);
    const ptags = ppassage != null ? ppassage.tags : [];
    // moved here is not redisplay or return
    const movedHere = !T.revisiting && ptitle !== here && !ptags.includes("noreturn");
    if (movedHere || V.n1t_patiencePassage == null) {
      // If we're at a different action node, reset patience and aggro
      if (V.n1t_patiencePassage !== here) {
        V.n1t_patienceLooks = looks;
        V.n1t_patienceActions = actions;
        V.n1t_patiencePassage = here;
        V.n1t_patienceAggro = 0;
      }
      // If we've exhausted patience, start aggro.
      if (V.n1t_patienceAggro || V.n1t_patienceLooks <= 1 || V.n1t_patienceActions <= 1) {
        V.n1t_patienceAggro++;
      }
      // warning on aggro
      T.patienceWarning = V.n1t_patienceAggro === 1;
      // forced response
      T.patienceExhausted = V.n1t_patienceAggro > 1;
      // set return links
      V.n1t_afterLook = "[" + "[Do something else.|" + here + "][$n1t_patienceLooks -= 1]]";
      V.n1t_afterAction = "[" + "[Continue|" + here + "][$n1t_patienceActions -= 1; $n1t_didSomeAction = true]]";
    }
    // Patience text
    switch (V.n1t_patienceAggro) {
      case 0: $(this.output).wiki(patientText); break;
      case 1: $(this.output).wiki(impatientText); break;
      default: $(this.output).wiki(angryText); break;
    }
  }
});

/**
 * For a link to a look passage, allow the link if it hasn't been seen recently.
 * Seen recently is: within the last 10 passages, since the latest n1-patience passage.
 */
Macro.add("n1-no-loop", {
  handler: function() {
    const link = this.args[0];
    if (!link.isLink) throw new Error("Expected arg to be a link");
    if (recentlyViewed(link.link)) {
      $(this.output).wiki(link.text);
    } else {
      State.temporary.noLoopLink = link;
      $(this.output).wiki("<<link _noLoopLink.text _noLoopLink.link>><</link>>");
    }
  }
});

function recentlyViewed(name) {
  const limit = State.variables.n1t_patiencePassage;
  const max = 10;
  for (let i = 1; i < max; i++) {
    const past = State.peek(-i);
    if (past == null) return false;
    if (past.title === limit) return false;
    if (past.title === name) return true;
  }
  return false;
}
<</script>>


