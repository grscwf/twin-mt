Macro.add("pw-choice", {
  tags: ["pw-another", "pw-fail"],
  handler: function() {
    const v = State.variables;
    for (const payload of this.payload) {
      switch (payload.name) {
        case "pw-choice":
        case "pw-another": {
          const args = payload.args;
          if (args.length !== 1 && args.length !== 2) {
            throw new Error(`Expected 1 or 2 args for ${payload.name}`);
          }
          const pw = args[0].replace(/\s+/g, '');;
          if (!/^[A-Z]\w+$/.test(pw)) {
            throw new Error(`Arg 0 ${pw} should match /^[A-Z][\s\w]*$/`);
          }
          const vn = `n1_pwTried${pw}`;
          const text = args[1] == null ? args[0] : args[1];
          if (!v[vn]) {
            $(this.output).wiki(payload.contents);
            Nero.addAction("[" + `[\`"Please: ${text}."\`|${sayPassword}][$${vn} = true]]`);
            return;
          }
          break;
        }
        case "pw-fail": {
          $(this.output).wiki(payload.contents);
          return;
        }
        default:
