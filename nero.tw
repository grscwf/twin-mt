Config.passages.descriptions = function() {
  let excerpt = this._excerpt || Passage.getExcerptFromText(this.text);

  // remove noise
  excerpt = excerpt.replace(/^Return to the game /, '');

  // add unlock count
  const [unlocked, total] = countUnlocks();
  if (unlocked === total) {
