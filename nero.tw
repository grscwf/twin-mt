    if (Story.get(to.title).tags.includes("noreturn")) return;

    // Don't record title screen
    if (from.title === "Title Screen") return;

    // Clear log at Bound (and record it).
    if (from.turn < to.turn && (from.title === "Bound" || to.title === "Bound")) {
      log = [];
      saveLog();
