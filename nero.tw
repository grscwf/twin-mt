    variants.sort((a, b) => {
      const aj = a.states[0].json;
      const bj = b.states[0].json;
      return aj < bj ? -1 : aj > bj ? +1 : 0;
    });
    const pos = $("#passages");
    pos.empty();
    const sum = $("<div id=ev-summary>").appendTo(pos);
    $("<div>").text(`${variants.length} variants`).appendTo(sum);
    messages.forEach(m => $("<div>").text(m).appendTo(sum));
    for (const variant of variants) {
      pos.append("<hr>");
      const outer = $("<div class=ev-states>").appendTo(pos);
      variant.states.forEach(st => {
        const inner = $("<div class=ev-state>").appendTo(outer);
        for (const vn of varsUsed) {
          const val = st.obj[vn];
          if (ET.vars[vn] != null) {
            const str = ET.enums[ET.vars[vn]][val] || `${vn}=${val}`;
            $(`<span class="ev-var ev-enum">`).text(str).appendTo(inner);
          } else if (val == null || val === false) {
            $(`<span class="ev-var ev-false">`).text(vn).appendTo(inner);
          } else if (val === true) {
            $(`<span class="ev-var ev-true">`).text(vn).appendTo(inner);
          } else {
            const str = JSON._real_stringify(val);
            $(`<span class="ev-var ev-other">`).text(`${vn}=${str}`).appendTo(inner);
          }
        }
      });
      pos.append(variant.dom);
    }
    State.active.variables = nowState;
    State.clearTemporary();
    for (const k of Object.keys(nowTemps)) {
      State.temporary[k] = nowTemps[k];
    }
    highlightDiffs();
  };

  let tries = 0;
  const tryNext = () => {
    tries++;
    if (tries >= 2000) {
      messages.push(`Stopping at ${tries} tries`);
      todo.length = 0;
    }
    if (todo.length === 0) {
      finish();
    } else {
      tryOne();
      setTimeout(tryNext);
    }
  };
  tryNext();
}

function objSelect(obj, keys) {
  const result = {};
  keys.forEach(k => result[k] = obj[k] ?? null);
  return result;
}

function highlightDiffs() {
  const passages = $(".passage");
  for (let i = passages.length - 1; i > 0; i--) {
    diff(passages[i - 1], passages[i]);
  }
}

function diff(x, y) {
  if (x == null) {
    mark(y);
  } else if (y == null) {
    mark(x);
  } else if (x.nodeType !== y.nodeType) {
    mark(x), mark(y);
  } else if (x.nodeType === Node.TEXT_NODE && x.nodeValue !== y.nodeValue) {
    mark(x), mark(y);
  } else {
    // dumb comparison that mostly works because of sugarcube debug annotations
    let i = 0;
    for (; i < x.childNodes.length; i++) {
      diff(x.childNodes[i], y.childNodes[i]);
    }
    for (; i < y.childNodes.length; i++) {
      mark(y.childNodes[i]);
    }
  }
}

function mark(node) {
  if (node != null && node.nodeType != Node.ELEMENT_NODE) {
    node = node.parentElement;
  }
  if (node != null) {
    $(node).addClass("ev-diff");
  }
}
