{
  "compilerOptions": {
    "lib": ["dom", "es2021"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es2021",

    "noEmit": true,

    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "strict": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compileOptions": {
      "allowJs": false,
      "checkJs": false,
    }
  }
}
