// tsconfig for browser code included in the twine html bundle
{
  "include": ["tw-code*/**/*", "types/**/*"],

  "compilerOptions": {
    "lib": ["dom", "es2021"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es2021",

    "noEmit": true,

    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    // this is annoying for SugarCube state vars
    // "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "strict": true
  }
}
