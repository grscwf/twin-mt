{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es2021",

    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "strict": true
  },
  "ts-node": {
    "transpileOnly": true
  }
}
